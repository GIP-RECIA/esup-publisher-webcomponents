{
  "name": "esup-publisher-webcomponents",
  "private": true,
  "workspaces": [
    "@gip-recia/*"
  ],
  "scripts": {
    "analyze": "yarn workspaces foreach -At run analyze",
    "build": "yarn workspaces foreach -At run build",
    "lint": "yarn workspaces foreach -At run lint",
    "test": "yarn workspaces foreach -At run test",
    "clean": "find . -name node_modules -type d -prune -o -name cache -type d -o -name dist -type d | xargs rm -rf",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@playwright/test": "^1.41.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.1"
  },
  "packageManager": "yarn@4.1.0"
}
