{
  "name": "@gip-recia/esup-publisher-webcomponents-utils",
  "version": "0.0.7",
  "description": "Esup-Publisher Webcomponents Utils",
  "main": "src/index.js",
  "module": "src/index.js",
  "type": "module",
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint src/index.js",
    "lint:lit-analyzer": "lit-analyzer src/index.js",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "cem analyze --litelement --globs \"**/*.js\"",
    "analyze:watch": "cem analyze --litelement --globs \"**/*.js\" --watch",
    "serve": "wds --watch",
    "test": "npm run test:dev",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "start": "npm run serve",
    "release": "standard-version -t esup-publisher-webcomponents-utils/",
    "release:minor": "standard-version --release-as minor -t esup-publisher-webcomponents-utils/",
    "release:patch": "standard-version --release-as patch -t esup-publisher-webcomponents-utils/",
    "release:major": "standard-version --release-as major -t esup-publisher-webcomponents-utils/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GIP-RECIA/esup-publisher-webcomponents.git"
  },
  "keywords": [],
  "author": "GIP-RECIA",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/GIP-RECIA/esup-publisher-webcomponents/issues"
  },
  "homepage": "https://github.com/GIP-RECIA/esup-publisher-webcomponents",
  "dependencies": {
    "lit": "2.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.1",
    "@babel/eslint-parser": "7.27.1",
    "@custom-elements-manifest/analyzer": "0.10.4",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@open-wc/testing": "4.0.0",
    "@open-wc/testing-karma": "4.0.9",
    "@types/mocha": "10.0.10",
    "@web/dev-server": "0.4.6",
    "@web/dev-server-legacy": "2.1.1",
    "@web/test-runner": "0.20.2",
    "@web/test-runner-mocha": "0.9.0",
    "@web/test-runner-playwright": "0.11.0",
    "@webcomponents/webcomponentsjs": "2.8.0",
    "deepmerge": "4.3.1",
    "eslint": "8.57.0",
    "lit-analyzer": "2.0.3",
    "mocha": "11.5.0",
    "prettier": "3.3.3",
    "standard-version": "^9.5.0"
  },
  "customElements": "custom-elements.json"
}
